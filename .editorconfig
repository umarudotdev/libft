# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,h}]
indent_style = tab
indent_size = 4

[*.{cpp,hpp}]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
